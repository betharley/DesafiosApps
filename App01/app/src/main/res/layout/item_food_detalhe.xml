<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="@dimen/size8dp"
    app:cardCornerRadius="@dimen/size5dp"
    android:layout_marginLeft="@dimen/size8dp"
    android:layout_marginRight="@dimen/size8dp"
    android:layout_marginTop="@dimen/size8dp"
    android:layout_marginBottom="@dimen/size8dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/item_detalhe_imagem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size120dp"
            android:src="@drawable/iv_aoyama"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/item_detalhe_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size20sp"
            android:textColor="@color/cinzaEscuro"
            android:layout_marginStart="@dimen/size16dp"
            android:layout_marginEnd="@dimen/size16dp"
            android:text="@string/titulo_do_anuncio"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>

