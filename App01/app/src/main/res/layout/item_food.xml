<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="8dp"
    app:cardCornerRadius="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/item_imagem"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/img01_tony_romas"
            />

        <TextView
            android:id="@+id/item_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#050505"
            android:layout_marginLeft="16dp"
            android:text="Titulo do anuncio"
            android:textStyle="bold"
            android:textAllCaps="false"
            />

        <TextView
            android:id="@+id/item_endereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#474646"
            android:layout_marginLeft="16dp"
            android:text="EndereÃ§o que esta servindo o anuncio"
            android:textAllCaps="false"
            />

        <TextView
            android:id="@+id/item_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#474646"
            android:layout_marginLeft="16dp"
            android:text="Horario de atendimento"
            android:textAllCaps="false"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>

