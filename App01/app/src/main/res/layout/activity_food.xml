<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.FoodActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size250dp"
        >
        <ImageView
            android:id="@+id/food_imagem_fundo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size250dp"
            android:src="@drawable/iv_tonyroma"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:id="@+id/food_seta"
            android:layout_width="@dimen/size50dp"
            android:layout_height="@dimen/size50dp"
            android:src="@drawable/ic_seta_baseline_arrow_back_24"
            android:padding="@dimen/size10dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/food_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tony_romas"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="false"
            android:textAllCaps="false"
            android:textColor="@color/branco"
            android:textSize="@dimen/size25sp"
            android:layout_marginStart="@dimen/size25dp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/food_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/food_descricao"
        android:textSize="@dimen/size18sp"
        android:textColor="@color/cinzaEscuro"
        android:layout_marginLeft="@dimen/size16dp"
        android:layout_marginTop="@dimen/size16dp"
        android:layout_marginRight="@dimen/size16dp"
        />



</LinearLayout>